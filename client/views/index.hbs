       <script>
        const chatSequence = [
    "On-Ion: Hey, how are you holding up today?",
    "Human: I'm tired...",
    "On-Ion: Youâ€™ve done a lot. Rest is part of progress ðŸ’™",
    "Human: I feel unmotivated.",
    "On-Ion: Even small steps count. Youâ€™ve got this! ðŸš€",
    "Human: Thanks, I needed that.",
        ];

        let currentIndex = 0;
        let typingStatus = 'typing';
        let currentLine = '';
        let currentCharIndex = 0;
        let currentSpeaker = 'bot';  // Keep track of who is typing (bot or human)

        function typeChatLine() {
            if (currentCharIndex < chatSequence[currentIndex].length) {
                currentLine += chatSequence[currentIndex][currentCharIndex];
                document.getElementById("typeAnimation").textContent = currentLine + (typingStatus === 'typing' ? '|' : '');
                currentCharIndex++;
                setTimeout(typeChatLine, 100); // Adjust speed of typing here
            } else {
                typingStatus = 'idle';
                setTimeout(switchToNextLine, 1000); // Wait a bit before switching
            }
        }

        function switchToNextLine() {
            // Update the speaker's image after each message
            currentSpeaker = currentSpeaker === 'bot' ? 'human' : 'bot'; // Alternate between bot and human
            document.getElementById("chatIcon").src = currentSpeaker === 'bot' ? '/bot.png' : (currentSpeaker === 'human' ? '/human1.jpeg' : '/human2.jpeg');

            typingStatus = 'typing';
            currentCharIndex = 0;
            currentLine = '';
            currentIndex = (currentIndex + 1) % chatSequence.length; // Loop through the chatSequence
            typeChatLine();
        }

        // Start typing the first line when the page loads
        typeChatLine();

    </script>




